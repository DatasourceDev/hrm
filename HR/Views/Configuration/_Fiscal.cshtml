@model  HR.Models.ConfigulationViewModel
@using SBSModel.Models;
@using SBSModel.Common;
@using HR.Common;
@using SBSResourceAPI;
@using SBSModel.Common;
<script type="text/javascript">
    $(function () {

    });
</script>
<div id="fiscal-tab" class="tab-pane fade in ">
    @using (Html.BeginForm("Configuration", "Configuration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <section class="tile transparent">
                    <div class="tile-header transparent">
                        <h1><strong>@Resource.Fiscal_Year</strong></h1>
                        <div class="controls">
                            <a href="#" class="minimize"><i class="fa fa-chevron-down color-white"></i></a>
                        </div>
                    </div>
                    <div class="tile-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <label for="Company_Name" class="control-label">@Resource.Fiscal_Year</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        <div class="radio radio-transparent">
                                            @if (!Model.Default_Fiscal_Year.HasValue || (Model.Default_Fiscal_Year.HasValue && Model.Default_Fiscal_Year.Value))
                                            {
                                                <input type="radio" name="Default_Fiscal_Year" id="Default_Fiscal_Year" value="true" checked>
                                            }
                                            else
                                            {
                                                <input type="radio" name="Default_Fiscal_Year" id="Default_Fiscal_Year" value="true">
                                            }

                                            <label for="Default_Fiscal_Year">@Resource.Default_Fiscal_Year_31</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        <div class="radio radio-transparent">
                                            @if (Model.Default_Fiscal_Year.HasValue && Model.Default_Fiscal_Year.Value == false)
                                            {
                                                <input type="radio" name="Default_Fiscal_Year" id="Custom_Fiscal_Year" value="false" checked>
                                            }
                                            else
                                            {
                                                <input type="radio" name="Default_Fiscal_Year" id="Custom_Fiscal_Year" value="false">
                                            }

                                            <label for="Custom_Fiscal_Year">@Resource.Custom_Fiscal_Year</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control input-datemonthpicker" id="Custom_Fiscal_Year" name="Custom_Fiscal_Year" value="@Model.Custom_Fiscal_Year">
                                        <div class="validation-error">
                                            @Html.ValidationMessageFor(m => m.Custom_Fiscal_Year)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <section class="tile color transparent-white" style="padding-left:15px;">
                    <div class="tile-body">
                        <div class="row">
                            <div class="col-md-12">
                                @if (Model.rights != null && Model.rights.Contains(UserSession.RIGHT_U) && Model.rights.Contains(UserSession.RIGHT_C))
                                {
                                    <button type="submit" class="btn btn-primary" name="tabAction" value="fiscal" onclick="return Confirm_Alert('@Model.Employee_No_Pattern_ID');">@Resource.Save</button>
                                }
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    }
</div>



