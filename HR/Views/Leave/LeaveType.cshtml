@model HR.Models.LeaveTypeViewModel
@using SBSModel.Models;
@using SBSModel.Common;
@using SBSResourceAPI;
@{
    ViewBag.Title = Resource.Leave_Type;
}

@if ((Model.rights != null && Model.rights.Contains(UserSession.RIGHT_A)))
{
    <script type="text/javascript">

        var dslist = new Array();
        var dsTextlist = new Array();
        var dcnt = '@(Model.designationList != null ? Model.designationList.Count : 0)';
        $(function () {

            @for (var i = 0; i < (Model.designationList != null ? Model.designationList.Count : 0) ; i++)
        {
            var value = Model.designationList[i].Value != null ? Model.designationList[i].Value : "0";
            var text = Model.designationList[i].Value != null ? Model.designationList[i].Text : "All";

            @:dslist.push('@value'); dsTextlist.push('@text');
                                                                                                                                                }


            Parent_Onchange();
            Claimable_Type_Onchange();

            $("#Claimable_Type").change(function () {
                Claimable_Type_Onchange();
            });

            $("#clear").click(function () {
                $('#Department_ID').css("display", "none");
                $('#isDepartment').val("0");
            });

            $("#btnDetailSubmit").click(function () {
                ClearValidate('#Designations');
                ClearValidate('#Year_Service');
                ClearValidate('#Default_Leave_Amount');

                var valid = true;

                if (ValidateArrayRequire('Designations', '@Resource.Designation', true) == false) {
                    valid = false;
                }

                if (ValidateNumber('Year_Service', '@Resource.Years_Services', true, true) == false) {
                    valid = false;
                }

                if (ValidateDecimal('Default_Leave_Amount', '@Resource.Default_Leave_Amount', true, true) == false) {
                    valid = false;
                }

                if (!valid) {
                    return;
                }

                var pYear = parseInt($('#Year_Service').val());
                var pAmount = parseFloat($('#Default_Leave_Amount').val());
                var pDesignation = new Array();

                if ($('#Event_Click').val() == '@RowType.EDIT') {
                    var index = parseInt($('#Index').val());
                    if (index != null && !isNaN(index)) {

                        var dtexts = "";

                        $("[name='Detail_Rows[" + index + "].Designations']").remove();
                        var dstr = "[";
                        var dselcnt = 0;

                        for (var i = 0; i < dcnt ; i++) {
                            if ($("#Designations-" + i).get(0).checked == true) {
                                if (dselcnt > 0) {
                                    dstr = dstr + ',';
                                }
                                dstr = dstr + dslist[i];
                                dselcnt++;
                                dtexts = dtexts + dsTextlist[i] + "\r\n";
                                var d = "<input type='hidden' name='Detail_Rows[" + index + "].Designations' value='" + dslist[i] + "' />";
                                $('#td-' + index).append(d);

                                pDesignation.push(dslist[i]);
                            }
                        }

                        dstr = dstr + "]"

                        $('#Detail_Rows_' + index + '__Year_Service').val(pYear);
                        $('#Detail_Rows_' + index + '__Default_Leave_Amount').val(pAmount);
                        $('#Detail_Rows_' + index + '__Designations_Text').val(dtexts);
                        $('#Detail_Rows_' + index + '__Year_Service_Text').val(pYear);
                        $('#Detail_Rows_' + index + '__Default_Leave_Amount_Text').val(pAmount);
                        $('#Detail_Rows_' + index + '__Designations_Text').get(0).rows = dselcnt;


                        var clickevent = "EditDetail_Onclick('" + index + "','" + $('#Leave_Config_ID').val() + "','" + $('#Group_ID').val() + "','" + $('#Row_Type').val() + "'," + dstr + ",'" + pYear + "','" + pAmount + "')";
                        $('#btnEditDetail-' + index).attr("onclick", clickevent);
                        $('#btnClose').get(0).click();

                    }
                }
                else {

                    for (var i = 0; i < dcnt ; i++) {
                        if ($("#Designations-" + i).get(0).checked == true) {
                            pDesignation.push(dslist[i]);
                        }
                    }

                    var rowcount = $('#designationDataTable > tbody >tr').length;
                    var data = { pIndex: rowcount, pDesignation: pDesignation, pYear: pYear, pAmount: pAmount };
                    ShowMask();
                    $.ajax({
                        url: '@Url.Action("AddNewLeaveDetail", "Leave")',
                        //Passes the content of an input up
                        data: data,
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            var str = '<tr  id="erow-' + rowcount + '">';
                            str = str + data + '</tr>';
                            $('#designationDataTable > tbody').append(str);
                            $('#btnAddDesignation').get(0).click();
                            $('#btnClose').get(0).click();
                            CloseMask();
                        }
                    });
                }

            });

            //---------------------------------------------------------------//
            $('input[name="Bring_Forward"]:radio').change(function () {
                if ($('input[name="Bring_Forward"]:radio:checked').val() == "true") {
                    $('#Months_To_Expiry').prop('disabled', false);
                    $('#Bring_Forward_Percent').prop('disabled', false);
                    $('#Bring_Forward_Days').prop('disabled', false);
                    $('#Months_To_Expiry').val("1");
                    $('#Months_To_Expiry').trigger("chosen:updated");

                    $('#Is_Bring_Forward_DaysY').prop('disabled', false);
                    $('#Is_Bring_Forward_DaysN').prop('disabled', false);
                    Is_Bring_Forward_Days_Onchange();
                } else {
                    $('#Months_To_Expiry').prop('disabled', true);
                    $('#Bring_Forward_Percent').prop('disabled', true);
                    $('#Bring_Forward_Percent').val(0);
                    $('#Bring_Forward_Days').prop('disabled', true);
                    $('#Bring_Forward_Days').val(0);

                    $('#Months_To_Expiry').val("");
                    $('#Months_To_Expiry').trigger("chosen:updated");

                    $('#Is_Bring_Forward_DaysY').prop('disabled', true);
                    $('#Is_Bring_Forward_DaysN').prop('disabled', true);
                }
               
            });

            $('input[name="Is_Bring_Forward_Days"]:radio').change(function () {
                Is_Bring_Forward_Days_Onchange();
            });

            if ('@Model.Bring_Forward' == "False") {
                $('#Months_To_Expiry').prop('disabled', true);
                $('#Bring_Forward_Percent').prop('disabled', true);
                $('#Bring_Forward_Percent').val(0);
                $('#Bring_Forward_Days').prop('disabled', true);
                $('#Bring_Forward_Days').val(0);
                $('#Months_To_Expiry').val("");
                $('#Months_To_Expiry').trigger("chosen:updated");

                $('#Is_Bring_Forward_DaysY').prop('disabled', true);
                $('#Is_Bring_Forward_DaysN').prop('disabled', true);
            }
            else {
                if ('@Model.Is_Bring_Forward_Days' == "False") {
                    Is_Bring_Forward_Days_Onchange();
                }
            }
        });
        function Is_Bring_Forward_Days_Onchange()
        {
            if ($('input[name="Is_Bring_Forward_Days"]:radio:checked').val() == "true") {
                $('#Bring_Forward_Percent').prop('disabled', true);
                $('#Bring_Forward_Days').prop('disabled', false);

            } else {
                $('#Bring_Forward_Percent').prop('disabled', false);
                $('#Bring_Forward_Days').prop('disabled', true);
            }
        }

        function Claimable_Type_Onchange() {
            if ($("#Claimable_Type option:selected").text() == "Per Department") {

                $('#isDepartment').val("1");

                $('#Department_ID').prop('disabled', false)
            } else {
                $('#Department_ID').prop('disabled', true)
                $('#isDepartment').val("0");

                $('#Department_ID').val("");
            }

            $('#Department_ID').trigger("chosen:updated");
        }

        function AddDesignation_Onclick() {
            ClearValidate('#Designations');
            ClearValidate('#Year_Service');
            ClearValidate('#Default_Leave_Amount');

            $('#btnAddDesignation').get(0).click();
            $('#Event_Click').val('@RowType.ADD');

            $('#Leave_Config_ID').val('');
            $('#Index').val('');
            $('#Group_ID').val('');
            $('#Row_Type').val('@RowType.ADD');
            $('#Year_Service').val(0);
            $('#Default_Leave_Amount').val(0);

            if ($("[name='Designations']") != null) {
                for (var i = 0 ; i < $("[name='Designations']").length; i++) {
                    $("[name='Designations']").get(i).checked = false;
                }
            }
            Designations_Onchange();
        }

        function EditDetail_Onclick(index, eConfigID, groupID, rowType, designations, yearService, DefaultLeaveAmount) {
            ClearValidate('#Designations');
            ClearValidate('#Year_Service');
            ClearValidate('#Default_Leave_Amount');

            $('#btnAddDesignation').get(0).click();
            $('#Event_Click').val('@RowType.EDIT');
            $('#Leave_Config_ID').val(eConfigID);
            $('#Index').val(index);
            $('#Year_Service').val(parseInt(yearService));
            $('#Default_Leave_Amount').val(DefaultLeaveAmount);

            if (designations != null) {
                for (var i = 0; i < dcnt ; i++) {
                    $("[name='Designations']").get(i).checked = false;
                    for (var j = 0 ; j < designations.length ; j++) {
                        if (dslist[i] == designations[j]) {
                            $("[name='Designations']").get(i).checked = true;
                            break;
                        }
                    }
                }
            }
            Designations_Onchange();
        }

        function DeleteDetail(rowid, index) {
            if (confirm('@Resource.Confirm_Delete_Msg')) {
                $('#Detail_Rows_' + index + '__Row_Type').val('@RowType.DELETE');
                $('#' + rowid).hide();
            }
        }

       function Start_Tour()
        {
            //New Leave creation tour            
            var strtitle = "New Leave Type Creation";
            var newLTypeTour = new Tour({
                storage: false,
                steps: [
                {
                    element: "#Leave_Name",
                    title: strtitle,
                    content: "Enter the leave name here.",
                    onNext: function () {
                    }
                },
                {
                    element: "#lblGender",
                    title: strtitle,
                    content: "Select the eligible gender for this new leave type.",
                    onNext: function () {
                    }
                },
                {
                    element: "#lblMaritalStatus",
                    title: strtitle,
                    content: "Select the eligible gender for this new leave type.",
                    onNext: function () {
                    }
                },
                {
                    element: "#li-designation",
                    title: strtitle,
                    content: "You can set the leave amount by service year in this tab.",
                    onNext: function () {
                    }
                },
                {
                    element: "#btnAddByDesignation",
                    title: strtitle,
                    content: "This button allows you to set up leave amount by service year.",
                    onNext: function () {
                        $("#designation-tab").removeClass("active");
                        $("#li-designation").removeClass("active");
                        $("#extra-tab").addClass("active in");
                        $("#li-extra").addClass("active");
                    }
                },
                {
                    element: "#li-extra",
                    title: strtitle,
                    content: "If you have an employee who have more or less entitlement leave amount than others, you can set up here.",
                    onNext: function () {
                    }
                },
                {
                    element: "#btnAddExtra",
                    title: strtitle,
                    content: "This button allows you to add extra leave amount of specified employee. The entered leave amouont will be add or minus based on 'By designation' set up."
                }
                ],
                onEnd: function () {
                    createCookie("newLTypeTour", "End");
                    $("#extra-tab").removeClass("active");
                    $("#li-extra").removeClass("active");
                    $("#designation-tab").addClass("active in");
                    $("#li-designation").addClass("active");
                }
            });
            newLTypeTour.init();
            newLTypeTour.start();
        }

        function Designations_Onchange() {
            var haveAll = false;

            for (var i = 0; i < dcnt ; i++) {
                var ds = $("#Designations-" + i).get(0);
                if (i == 0) {
                    if (ds.checked == true) {
                        haveAll = true;
                    }
                }
                else {
                    if (haveAll == true) {
                        $("#Designations-" + i).get(0).checked = false;
                        $("#Designations-" + i).prop('disabled', true);
                    }
                    else {
                        $("#Designations-" + i).prop('disabled', false);
                    }
                }
            }
        }

        function addNewExtra() {
            var rowcount = $('#lextraDataTable > tbody >tr').length;
            var data = { pIndex: rowcount };
            ShowMask();
            $.ajax({
                url: '@Url.Action("AddNewLeaveExtra", "Leave")',
                //Passes the content of an input up
                data: data,
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var str = '<tr class="status-info" id="exrow-' + rowcount + '">';
                    str = str + data + '</tr>';
                    $('#lextraDataTable > tbody').append(str);
                    CloseMask();
                }
            });
        }

        function DeleteExtra(rowid, index) {
            if (confirm('@Resource.Confirm_Delete_Msg')) {
                $('#Extra_Rows_' + index + '__Row_Type').val('@RowType.DELETE');
                $('#' + rowid).hide();
            }
        }

        /*Added By Jane 03/02/2016*/
        function Parent_Onchange() {
            var parentID = $('#Leave_Config_Parent_ID').val();
            if (parentID == null || parentID == '' || parentID == 0)
                $('#divBringForward').show();
            else
                $('#divBringForward').hide();
        }

    </script>
