                                            <div class="radio radio-transparent">
                                                @if (Model.Deduct_In_Payroll)
                                                {
                                                    <input type="radio" name="Deduct_In_Payroll" id="Deduct_In_PayrollN" value="false">
                                                }
                                                else
                                                {
                                                    <input type="radio" name="Deduct_In_Payroll" id="Deduct_In_PayrollN" value="false" checked>
