                                            <div class="validation-error">
                                                <span id="Designation_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="Year_Service" class="control-label">@Resource.Years_Services</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input type="text" class="form-control input-datepicker" id="Year_Service" name="Year_Service" value="@Model.Year_Service">
                                            <div class="validation-error">
                                                <span id="Year_Service_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="Year_Service" class="control-label">@Resource.Default_Leave_Amount</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" class="form-control input-datepicker" id="Default_Leave_Amount" name="Default_Leave_Amount" value="@Model.Default_Leave_Amount">
                                            <div class="validation-error">
                                                <span id="Default_Leave_Amount_Err"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            @*<label class="control-label">@Model.Company_Currency</label>*@
                                            <label class="control-label">@Resource.Days</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="btnClose" type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">@Resource.Close</button>
                            <button id="btnDetailSubmit" type="button" class="btn btn-primary" name="tabAction" value="leaveDefaultNormal">@Resource.Save_Change</button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="md-overlay"></div><!-- the overlay element -->

        }
