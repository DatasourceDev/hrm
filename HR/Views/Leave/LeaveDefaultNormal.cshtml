                                                            <input type="text" class="form-control input-table-transparent" id="Detail_Rows_@(i)__Default_Leave_Amount_Text" value="@Model.Detail_Rows[i].Default_Leave_Amount" >
                                                            <input type="hidden" class="form-control" id="Detail_Rows_@(i)__Default_Leave_Amount" name="Detail_Rows[@i].Default_Leave_Amount" value="@Model.Detail_Rows[i].Default_Leave_Amount">
