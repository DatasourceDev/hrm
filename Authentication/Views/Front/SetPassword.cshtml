        function LetterContainUpper(str) {
            for (var i = 0 ; i < str.length ; i++) {
                if (isNaN(str[i])) {
                    if (str[i] == str[i].toUpperCase()) {
                        return true;
                    }
                }
            }
            return false;
        }
        function LetterContainLower(str) {
            for (var i = 0 ; i < str.length ; i++) {
                if (isNaN(str[i])) {
                    if (str[i] == str[i].toLowerCase()) {
                        return true;
                    }
                }

            }
            return false;
        }
        function LetterContainNumber(str) {
            for (var i = 0 ; i < str.length ; i++) {
                if (!isNaN(str[i])) {
                    return true;
                }

            }
            return false;
        }

        function Password_Onchange() {
            var text = $('#NewPassword').val();
            var text2 = $('#ConfirmPassword').val();

            var valid1 = false;
            var valid2 = false;

            if (text == null || text == "") {
                $('#NewPassword_OK').hide();
                $('#NewPassword_X').hide();
            }
            else {
                $('#NewPassword_OK').hide();
                $('#NewPassword_X').show();
            }


            if (text != null) {
                if (text.length >= 8) {
                    if (LetterContainLower(text) & LetterContainUpper(text) & LetterContainNumber(text)) {
                        $('#NewPassword_OK').show();
                        $('#NewPassword_X').hide();
                        valid1 = true;
                    }
                }
            }

            if (text2 == null || text2 == "") {
                $('#ConfirmPassword_OK').hide();
                $('#ConfirmPassword_X').hide();
            }
            else {
                $('#ConfirmPassword_OK').hide();
                $('#ConfirmPassword_X').show();
            }


            if (text2 != null) {
                if (text2.length >= 8) {
                    if (LetterContainLower(text2) & LetterContainUpper(text2) & LetterContainNumber(text2)) {
                        $('#ConfirmPassword_OK').show();
                        $('#ConfirmPassword_X').hide();
                        valid2 = true;
                    }
                }
            }

            if (text2 != null && text2 != "") {
                if (text != text2) {
                    $('#ConfirmPassword_OK').hide();
                    $('#ConfirmPassword_X').show();

                    valid2 = false;
                }
            }


            if (valid1 & valid2) {
                $('#btnSave').prop('disabled', false)
            }

        }
    </script>

