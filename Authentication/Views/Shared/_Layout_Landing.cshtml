                                                <input type="checkbox" value="true" id="L_Include_Screen_Shot" onchange="ScreenShot_Include_Onchange(this)">
                                                <label for="L_Include_Screen_Shot">@Resource.Include_A_Screenshot_With_My_Report</label>
                                            </div>
                                        </div>
                                    </div>
